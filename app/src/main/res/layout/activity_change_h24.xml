<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_change_h24"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="2dp"
    android:paddingTop="5dp"
    android:orientation="vertical"
    tools:context="com.yeapp.h24picasso.activity.ChangeH24">
    <LinearLayout
        android:id="@+id/contenitore"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">
        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:minHeight="30dp"
            android:background="@color/primary"
            android:title="@string/app_name"
            android:elevation="4dp"
            android:titleTextAppearance="@style/ToolbarTitle" />

        <android.support.v4.widget.SwipeRefreshLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:id="@+id/swipe"
            android:layout_weight="1">

            <ListView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clipToPadding="false"
                android:dividerHeight="0dp"
                android:divider="@android:color/transparent"
                android:id="@+id/listDays"
                android:scrollbars="vertical"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true">

            </ListView>
        </android.support.v4.widget.SwipeRefreshLayout>

        <LinearLayout
            android:id="@+id/infoBase"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:baselineAligned="false"
            android:background="@color/primary_light"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:gravity="center"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:background="@drawable/top_border_shadow">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginEnd="10dp"
                    android:layout_marginStart="6dp"
                    android:layout_gravity="center_vertical"
                    android:gravity="center"
                    android:layout_height="match_parent">
                    <TextView
                        android:id="@+id/rowEtichetta"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="30sp"
                        android:layout_gravity="center"
                        android:gravity="bottom"
                        android:text="@string/instradamento_base_text"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:layout_marginStart="10dp"
                    android:paddingEnd="5dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="vertical"
                        android:background="@drawable/left_border_shadow"
                        android:paddingStart="5dp"
                        android:layout_height="match_parent">
                        <RelativeLayout
                            android:id="@+id/blocco1"
                            android:layout_width="match_parent"
                            android:layout_marginStart="10dp"
                            android:layout_marginBottom="5dp"
                            android:layout_marginTop="2dp"
                            android:layout_height="wrap_content">
                            <TextView
                                android:id="@+id/hash1"
                                android:layout_width="50dp"
                                android:textAlignment="center"
                                android:layout_gravity="start"
                                android:layout_height="wrap_content"
                                android:textSize="@dimen/testoNumeri"
                                android:text="#1: "/>
                            <TextView
                                android:id="@+id/base1"
                                android:layout_width="wrap_content"
                                android:textAlignment="center"
                                android:layout_gravity="start"
                                android:layout_height="wrap_content"
                                android:textSize="@dimen/testoNumeri"
                                android:layout_toRightOf="@id/hash1"
                                android:text="base1"/>
                        </RelativeLayout>
                        <RelativeLayout
                            android:id="@+id/blocco2"
                            android:layout_width="match_parent"
                            android:layout_marginStart="10dp"
                            android:layout_marginBottom="5dp"
                            android:layout_marginTop="2dp"
                            android:layout_height="wrap_content">
                            <TextView
                                android:id="@+id/hash2"
                                android:layout_width="50dp"
                                android:textAlignment="center"
                                android:layout_gravity="start"
                                android:layout_height="wrap_content"
                                android:textSize="@dimen/testoNumeri"
                                android:text="#2: "/>
                            <TextView
                                android:id="@+id/base2"
                                android:layout_width="wrap_content"
                                android:textAlignment="center"
                                android:layout_gravity="center"
                                android:layout_height="wrap_content"
                                android:textSize="@dimen/testoNumeri"
                                android:layout_toRightOf="@id/hash2"
                                android:text="base2"/>
                        </RelativeLayout>
                        <RelativeLayout
                            android:id="@+id/blocco3"
                            android:layout_width="match_parent"
                            android:layout_marginStart="10dp"
                            android:layout_marginBottom="5dp"
                            android:layout_marginTop="2dp"
                            android:layout_height="wrap_content">
                            <TextView
                                android:id="@+id/hash3"
                                android:layout_width="50dp"
                                android:textAlignment="center"
                                android:layout_gravity="start"
                                android:layout_height="wrap_content"
                                android:textSize="@dimen/testoNumeri"
                                android:text="Segr: "/>
                            <TextView
                                android:id="@+id/base3"
                                android:layout_width="wrap_content"
                                android:textAlignment="center"
                                android:layout_gravity="end"
                                android:textSize="@dimen/testoNumeri"
                                android:layout_height="wrap_content"
                                android:inputType="none"
                                android:layout_toRightOf="@id/hash3"
                                android:text="base3"/>
                        </RelativeLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="5sp"
        app:layout_anchor="@id/listDays"
        android:src="@android:drawable/ic_menu_edit"
        app:layout_anchorGravity="bottom|end"
        app:backgroundTint="@color/button_color"
        android:clickable="true"
        android:onClick="onClick" />

</android.support.design.widget.CoordinatorLayout>
